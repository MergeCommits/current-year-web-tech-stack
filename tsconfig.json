{
    "extends": "@tsconfig/next/tsconfig.json",
    "compilerOptions": {
        "target": "es2017",
        "strict": true,
        "checkJs": true,
        "noUncheckedIndexedAccess": true,
        "isolatedModules": true,
        // "verbatimModuleSyntax": true,
        "baseUrl": "./src",
        "paths": {
            "@images/*": ["../public/images/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs"],
    "exclude": ["node_modules"]
}
